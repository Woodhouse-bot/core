<ol class="breadcrumb">
  <li>{{#link-to 'plugins'}}Plugins{{/link-to}}</li>
  <li class="active">{{name}}</li>
</ol>
<h1>{{name}}</h1>
{{x-wuphf}}
<form class="form-horizontal" role="form">
    {{#each getGroupedPrefs}}
        {{#each}}
            {{partial "pref"}}
        {{/each}}
    {{/each}}
    {{#if canAddNewPrefs}}
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="button" class="btn btn-primary pull-right" {{action "addNewPrefs"}}>Add +</button>
            </div>
        </div>
    {{/if}}
    <div class="form-group">
        <label class="col-sm-2 control-label" for="enabled">Enabled</label>
        <div class="col-sm-10">
            {{input type="checkbox" id="enabled" checked=enabled}}
        </div>
    </div>
    <h2>Listener Aliases</h2>
    {{#each listeneraliases}}
        {{partial "listeneralias"}}
    {{/each}}
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="button" class="btn btn-primary pull-right" {{action "save"}}>Save</button>
        </div>
    </div>
</form>
